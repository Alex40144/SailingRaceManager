generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Users {
  name     String
  id       String    @id @unique @default(uuid())
  email    String @unique
  password String
  settings Json
  club     String
  permLvl  Int
}

model Boats {
  id   String @id @unique @default(uuid())
  name String @unique
  crew Int
  py   Int
}

model Clubs {
  id   String @id @unique @default(uuid())
  name String @unique
  series Series[]
}

model Series {
  id      String  @id @unique @default(uuid())
  name    String  @unique
  club     Clubs  @relation(fields: [clubId], references: [id])
  clubId   String
  races Race[]
}

model Race {
  id       String   @id @unique @default(uuid())
  number   Int
  dateTime DateTime
  OOD      String
  AOD      String
  SO       String
  ASO      String
  results  Json?
  series     Series  @relation(fields: [seriesId], references: [id])
  seriesId   String
}
