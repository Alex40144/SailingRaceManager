generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  name     String
  id       String    @id @unique @default(uuid())
  email    String @unique
  password String
  settings Json
  club     String
  permLvl  Int
}

model Boats {
  id   String @id @unique @default(uuid())
  Name String @unique
  Crew Int
  PY   Int
}

model Club {
  id   String @id @unique @default(uuid())
  Name String @unique
  Series Series[]
}

model Series {
  id      String  @id @unique @default(uuid())
  Name    String  @unique
  Club     Club  @relation(fields: [clubId], references: [id])
  clubId   String
  Races Race[]
}

model Race {
  id       String   @id @unique @default(uuid())
  Number   Int
  DateTime DateTime
  OOD      String
  AOD      String
  SO       String
  ASO      String
  Results  Json?
  Series     Series  @relation(fields: [seriesId], references: [id])
  seriesId   String
}
